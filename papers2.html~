        ];

        let filteredPapers = [...papers];
        
        // Initialize the application
        function init() {
            populateFilters();
	    resetFilters();
            displayPapers();
            updateCount();
        }
        
        // Populate filter dropdowns with unique values
        function populateFilters() {
            const years = [...new Set(papers.map(p => p.year))].sort((a, b) => b - a);
            const topics = [...new Set(papers.map(p => p.topic))].sort();
            
            const yearSelect = document.getElementById('year');
            const topicSelect = document.getElementById('topic');
            
            years.forEach(year => {
                const option = document.createElement('option');
                option.value = year;
                option.textContent = year;
                yearSelect.appendChild(option);
            });
            
            topics.forEach(topic => {
                const option = document.createElement('option');
                option.value = topic;
                option.textContent = topic;
                topicSelect.appendChild(option);
            });
        }
        
        // Display papers
        function displayPapers() {
            const container = document.getElementById('papersContainer');
            const noPapers = document.getElementById('noPapers');
            
            if (filteredPapers.length === 0) {
                container.innerHTML = '';
                noPapers.style.display = 'block';
                return;
            }
            
            noPapers.style.display = 'none';
            
            container.innerHTML = filteredPapers.map(paper => `
                <div class="paper">
                    <h2 class="paper-title">${paper.title}</h2>
                    <div class="paper-authors">${paper.authors}</div>
                    <div class="paper-details">${paper.venue} ${paper.volume} (${paper.year})</div>
  <!--                  
                    <div class="paper-meta">
                        ${paper.isTop10 ? '<span class="badge badge-importance">Top 10</span>' : ''}
                        <span class="badge badge-type">${paper.type}</span>
                        <span class="badge badge-year">${paper.year}</span>
                        <span class="badge badge-topic">${paper.topic}</span>
                    </div>
     -->                
                    <button class="abstract-toggle" onclick="toggleAbstract(${paper.id})">
                        Show Abstract
                    </button>
                    
                    <div class="abstract" id="abstract-${paper.id}">
                        ${paper.abstract}
                    </div>
                    
                    <div class="links">
                        ${paper.links.official ? `<a href="${paper.links.official}" class="link link-official" target="_blank">Official Link</a>` : ''}
                        ${paper.links.free ? `<a href="${paper.links.free}" class="link link-free" target="_blank">Free Version</a>` : ''}
                        ${paper.links.video ? `<a href="${paper.links.video}" class="link link-video" target="_blank">Video</a>` : ''}
                    </div>
                </div>
            `).join('');
        }
        
        // Toggle abstract visibility
        function toggleAbstract(id) {
            const abstract = document.getElementById(`abstract-${id}`);
            const button = abstract.previousElementSibling;
            
            if (abstract.classList.contains('show')) {
                abstract.classList.remove('show');
                button.textContent = 'Show Abstract';
            } else {
                abstract.classList.add('show');
                button.textContent = 'Hide Abstract';
            }
        }
        
        // Filter papers based on selected criteria
        function filterPapers() {
            const importance = document.getElementById('importance').value;
            const type = document.getElementById('type').value;
            const year = document.getElementById('year').value;
            const topic = document.getElementById('topic').value;
            
            filteredPapers = papers.filter(paper => {
                if (importance === 'top10' && !paper.isTop10) return false;
                if (type !== 'all' && paper.type !== type) return false;
                if (year !== 'all' && paper.year.toString() !== year) return false;
                if (topic !== 'all' && paper.topic !== topic) return false;
                return true;
            });
            
            // Sort by year (newest first)
            filteredPapers.sort((a, b) => b.year - a.year);
            
            displayPapers();
            updateCount();
        }
        
        // Update papers count
        function updateCount() {
            const count = filteredPapers.length;
            document.getElementById('papersCount').textContent = 
                `Showing ${count} publication${count !== 1 ? 's' : ''}`;
        }
        
        // Reset all filters
        function resetFilters() {
            document.getElementById('importance').value = 'all';
            document.getElementById('type').value = 'all';
            document.getElementById('year').value = 'all';
            document.getElementById('topic').value = 'all';
            filterPapers();
        }
        
        // Add event listeners
        document.getElementById('importance').addEventListener('change', filterPapers);
        document.getElementById('type').addEventListener('change', filterPapers);
        document.getElementById('year').addEventListener('change', filterPapers);
        document.getElementById('topic').addEventListener('change', filterPapers);
        
        // Initialize the application
        init();
    </script>
</body>
</html>
